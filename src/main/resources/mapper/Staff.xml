<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team06.mapper.StaffMapper">

    <sql id="pmsFlowApplyCols">
        app_id,app_type,app_dept_name,
        status,create_staff_name,apply_date
    </sql>


    <resultMap id="staffMapper" type="com.team06.domain.Staff">
        <id property="staffId" column="staff_id"/>
        <result property="staffEmail" column="staff_email"/>
        <result property="username" column="staff_username"/>
        <result property="staffPwd" column="staff_pwd"/>
    </resultMap>

    <resultMap id="depMapper" type="com.team06.domain.Department">
        <id property="depId" column="dep_id"/>
        <result property="depName" column="dep_name"/>
    </resultMap>

    <resultMap id="pmsFlowApplyMapper" type="com.team06.domain.PmsFlowApply">
        <id property="appId" column="app_id"/>
        <result property="appType" column="app_type"/>
        <result property="appDeptName"column="app_dept_name"/>
        <result property="status" column="status"/>
        <result property="createStaffName" column="create_staff_name"/>
        <result property="applyDate" column="apply_date"/>
    </resultMap>

    <select id="getTotal"
            resultMap="pmsFlowApplyMapper"
            parameterType="pmsFlowApplyMapper">
        SELECT
        COUNT(app_id)
        FROM pms_flow_apply
        <where>
            1=1
            <if test="apply_data != null and != ''">
                AND apply_data=#{applyDate}
            </if>
            <if test="create_staff_name != null and != ''">
                AND create_staff_name=#{createStaffName}
            </if>
            <if test="app_dept_name != null and != ''">
                AND app_dept_name=#{appDeptName}
            </if>
            <if test="app_id != null and app_id != ''">
                AND app_id LIKE "%${appId}%"
            </if>
        </where>
    </select>

</mapper>